<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chatbot.Activity.MakeCardActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="청춘대로 싱글 체크카드"
        android:textAlignment="center"
        android:textSize="15sp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/select_card_show"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/card2_2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="본인확인"
        android:textColor="@color/colorText1"
        android:textSize="13sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorBar"
                android:gravity="center"
                android:text="이름"
                android:textAlignment="center"
                android:textColor="@color/colorText1" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"

                android:background="@drawable/name_edit"
                android:padding="20dp"
                android:inputType="textPersonName"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorBar"
                android:gravity="center"
                android:text="주민등록번호"
                android:textAlignment="center"
                android:textColor="@color/colorText1" />

            <EditText
                android:id="@+id/editText45"
                android:layout_width="100dp"
                android:inputType="textPersonName"
                android:background="@drawable/name_edit"
                android:layout_height="40dp"
                android:paddingStart="30dp"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30sp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="100dp"
                android:inputType="textPersonName"
                android:background="@drawable/name_edit"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView66"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorBar"
                android:gravity="center"
                android:text="휴대전화번호"
                android:textAlignment="center"
                android:textColor="@color/colorText1" />

            <EditText
                android:id="@+id/editText99"
                android:layout_width="80dp"
                android:inputType="textPersonName"
                android:background="@drawable/name_edit"
                android:padding="30dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30sp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorBar"
                android:gravity="center"
                android:text="신분증정보"
                android:textAlignment="center"
                android:textColor="@color/colorText1" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:background="@drawable/name_edit"
                android:padding="30dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>